<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <properties resource="jdbc.properties"/>
    <context id="context" targetRuntime="MyBatis3">
        <!--是否生成接口和实体类的注释，默认值为true-->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <jdbcConnection driverClass="${jdbc.driverClassName}"
                        connectionURL="${jdbc.url}"
                        userId="${jdbc.username}"
                        password="${jdbc.password}" />
        <javaModelGenerator targetPackage="com.study.model"
                            targetProject="src/main/java" />
        <sqlMapGenerator targetPackage="mappers"
                         targetProject="src/main/resources" />
        <javaClientGenerator targetPackage="com.study.mappers"
                             targetProject="src/main/java"
                             type="XMLMAPPER" />
        <table schema="supermarket"
               tableName="user"
               domainObjectName="User"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="false" >
            <!--自动为insert语句加入id-->
            <generatedKey column="u_id" sqlStatement="MySql"/>
            <!--配置生成实体类的属性名，把u_id变为id-->
            <columnRenamingRule searchString="^u_" replaceString="" />
            <!--对于需要类型转换时，指定typeHandler，会在mapper.xml文件的resultMap中指明属性对应的typeHandler-->
            <columnOverride column="u_sex" typeHandler="com.study.handlers.SexEnumHandler"/>
            <columnOverride column="u_level" typeHandler="com.study.handlers.UserLevelEnumHandler"/>
        </table>
        <table schema="supermarket"
               tableName="goods"
               domainObjectName="Goods"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="false" >
            <generatedKey column="g_id" sqlStatement="MySql"/>
            <columnRenamingRule searchString="^g_" replaceString="" />
            <columnOverride column="g_status" typeHandler="com.study.handlers.GoodsStatusEnumHandler"/>
        </table>
        <table schema="supermarket"
               tableName="goods"
               domainObjectName="Evaluation"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="false" >
            <generatedKey column="e_id" sqlStatement="MySql"/>
            <columnRenamingRule searchString="^e_" replaceString="" />
            <columnOverride column="g_id" property="goodsId"/>
            <columnOverride column="u_name" property="username"/>
            <columnOverride column="e_time" property="evalTime"/>
            <columnOverride column="g_status" typeHandler="com.study.handlers.EvaluationStatusEnumHandler"/>
        </table>
        <table schema="supermarket"
               tableName="cart"
               domainObjectName="CartItem"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="false" >
            <columnOverride column="g_id" property="Goods"/>
            <ignoreColumn column="u_id"/>
        </table>
    </context>
</generatorConfiguration>
